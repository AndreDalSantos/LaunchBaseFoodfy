{% extends "parts/layout_admin2.njk" %}

{% block head %}
    <title>Resetar senha</title>
{% endblock head %}

{% block content %}

    <form action="/admin/forgot-password" method="post">

        <div class="reset-fields">
            <p>Esqueceu a senha?</p>
        </div>

        <div class="fields-password-reset">

        <div class="item">
            <div class="title-line">Email</div>
            <div>
                <input 
                    type="email" 
                    name="email" 
                    class="input-some-text" 
                    value="{{user.email}}" 
                    placeholder="Digite o email cadastrado"
                    onblur="Validate.apply(this, 'isEmail')"
                >
                </div>
            </div>
        </div>

        <div class="footer-login-01 password-recovery-button">
            <div class="login-button">
                <div class="login-button2">
                    <button type="submit" class="button-login">Recuperar</button>
                </div>
            </div>
        </div>
    </form>

{% endblock content %}

