<div class="fields-password-reset">

    <div class="item">
        <div class="title-line">Email</div>
        <div>
            <input 
                type="email" 
                name="email" 
                class="input-some-text" 
                value="{{user.email}}" 
                placeholder="Email do usuÃ¡rio"
                onblur="Validate.apply(this, 'isEmail')"
            >
        </div>
    </div>

    <div class="item">
        <div class="title-line">Nova Senha</div>
        <div>
            <input 
                type="password" 
                name="password" 
                class="input-some-text" 
                placeholder="Digite uma nova senha"
            >
        </div>
    </div>

    <div class="item">
        <div class="title-line">Repetir senha</div>
        <div>
            <input 
                type="password" 
                name="passwordRepeat" 
                class="input-some-text" 
                placeholder="Repita a nova senha"
            >
        </div>
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">

