<div class="item">
    <div>Fotos</div>
    <div>
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photos"
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >

            <p>Selecione até 5 fotos</p>
        </div>
        <div id="photos-preview">
            {% if files %}
                {% for image in files %}
                    <div class="photo" id="{{image.id}}">
                        <img src="{{image.src}}" alt="{{image.name}}">
                        <i class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >close</i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>

<div class="item">
    <div class="title-line">Título da receita</div>
    <div>
        <input type="text" name="title" class="input-some-text" value="{{recipe.title}}">
    </div>
</div>

<div class="item">
    <div class="title-line">Autor da receita</div>
     <div>
        <select name="chef">
            {% for chef in chefOptions %}
                <option value="{{chef.id}}" 
                    {% if recipe.chef_id == chef.id %} selected="selected" {% endif %}    
                >{{chef.name}}</option>
            {% endfor %}
        </select>
     </div>
</div>


<div class="item">
    <div class="title-line">Ingredientes</div>
    <div id="ingredients">
        {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ingredient}}" placeholder="Ingredient"/>
                    <a id="idi{{recipe.ingredients.indexOf(ingredient)}}" onClick="removeDiv1(id)"><span id="remove-step" class="material-icons">highlight_off</span></a>                    
                </div>
            {% endfor %}
        {% else %}
            <div class="ingredient">
                <input type="text" name="ingredients[]" value="" placeholder="Ingredient"/>
                <a id="idi0" onClick="removeDiv1(id)"><span id="remove-step" class="material-icons">highlight_off</span></a>              
            </div>
        {% endif %}
    </div>
    {# <button type="button" class="add-ingredient">Adicionar novo ingrediente</button> #}
    <button type="button" onClick="addIngredient()" class="add-ingredient">Adicionar novo ingrediente</button>
    {% include 'admin/script_ingredients.njk' %}
</div>

<div class="item">
    <div class="title-line">Modo de preparo</div>
    <div id="steps">
        {% if recipe.ingredients %}
            {% for prep in recipe.preparation %}
                {% if prep != "" %}
                    <div class="step">
                        <input type="text" name="preparation[]" value="{{prep}}" placeholder="Step"/>
                        <a id="id{{recipe.preparation.indexOf(prep)}}" onClick="removeDiv(id)"><span class="material-icons">highlight_off</span></a>
                    </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <div class="step">
                <input type="text" name="preparation[]" value="" placeholder="Step"/>
                 <a id="id0" onClick="removeDiv(id)"><span class="material-icons">highlight_off</span></a>
            </div>
        {% endif %}
    </div>
    {# <button type="button" class="add-step">Adicionar passo</button> #}
    <button type="button" onClick="addStep()" class="add-step">Adicionar novo passo</button>    
    {% include 'admin/script_preparation.njk' %}
</div>

<div class="item">
    <div class="title-line">Informações adicionais</div>
    <div>
        <textarea name="information" id="" cols="30" rows="10">{{recipe.information}}</textarea>
    </div>
</div>


<script src="/scripts.js"></script>