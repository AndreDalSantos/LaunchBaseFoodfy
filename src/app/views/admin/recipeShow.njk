{% extends "admin/layout2.njk" %}

{% block head %}
    <title>Receita -
        {{item.title}}</title>
{% endblock head %}

{% block content %}

    <div class="header-show-recipe">
        <div class="sub-title2">
            <h1>Receita: {{item.title}}</h1>
        </div>

        <div>
        {# mudar: #}
            <a href="/admin/recipes/{{item.id}}/edit">Editar</a>
        </div>
    </div>

    <section class="recipe-single">
        <div class="gallery">
            <div class="highlight">
                {% if not files[0] %}
                    <img class="gallery-highlight-img1" src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="">
                {% else %}
                    <img 
                        class="gallery-highlight-img1"
                        src="{{files[0].src}}" 
                        alt="{{files[0].name}}"
                        onclick="Lightbox.open()"
                    >
                {% endif %}

                <div class="lightbox-target">
                    <img src="{{files[0].src}}" alt="{{files[0].name}}">
                    <a 
                        href="#" 
                        class="lightbox-close"
                        onclick="Lightbox.close()"
                    >
                        <i class="material-icons">close</i>
                    </a>
                </div>
            </div>
            <div class="gallery-preview">
                {% for image in files %}
                    <img 
                        src="{{image.src}}" 
                        alt="{{image.name}}"
                        {% if loop.index0 == 0 %}
                            class="active"
                        {% endif %}
                        onclick="ImageGallery.setImage(event)"
                    >
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="block-recipe-show">
        <div class="title">{{item.title}}</div>

        <div class="author">
            {% for chef in chefs %}
                {% if chef.id == item.chef_id %}
                    por {{chef.name}}
                {% endif %}
            {% endfor %}
        </div>
        {# <div class="author">por
            {{chef.name}}</div> #}

        <div class="labels">Ingredientes</div>

        <div class="ingredients-block">
            {% for ingredient in item.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </div>

        <div class="labels">Modo de preparo</div>

        <div class="preparation-block">
            {% for prep in item.preparation %}
                <li>{{prep}}</li>
            {% endfor %}
        </div>

        <div class="labels">Informações adicionais</div>

        <div class="information-block">{{item.information}}</div>
    </section>

{% endblock content %}