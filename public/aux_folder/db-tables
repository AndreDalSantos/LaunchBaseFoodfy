Table recipes {
  id int [pk, increment]
  chef_id int 
  title text 
  ingredients text[]
  preparation text[]
  information text
  created_at timestamp [Default: 'now()']
  updated_at timestamp [Default: 'now()']
}

Table chefs {
  id int [pk, increment]
  file_id int [UNIQUE]
  name text
  created_at timestamp [Default: 'now()']
  updated_at timestamp [Default: 'now()']
}

Table files {
  id int [pk, increment]
  name text
  path text [not null]
}

Table recipe_files {
  id int [pk, increment]
  recipe_id int
  file_id int [UNIQUE]
}

Ref: recipe_files.recipe_id > recipes.id
Ref: recipe_files.file_id > files.id
Ref: chefs.file_id > files.id